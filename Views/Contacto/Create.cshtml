@model ContactModel
@{
    ViewData["Title"] = "Create New Contact";
}

<div class="text-center">
    <h1 class="display-4">Create new contact</h1>
</div>

<form asp-controller="Contacto" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter the contact's name">
    </div>
    <div class="form-group">
        <label for="mail">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter contact's name">
    </div>
    <div class="form-group">
        <label for="phone">phone-number</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter contact's phone contact">
    </div>
    <button type="submit" class="btn btn-primary">Submit new contact</button>
    <a class="btn btn-secondary" asp-controller="Contacto" asp-action="Index" role="button">Return</a>
</form>