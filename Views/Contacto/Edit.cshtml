@{
    ViewData["Title"] = "edit Contact";
}

<div class="text-center">
    <h1 class="display-4">Create new contact</h1>
</div>

<form>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" placeholder="Enter the contact's name">
    </div>
    <div class="form-group">
        <label for="mail">E-mail</label>
        <input type="email" class="form-control" placeholder="Enter contact's name">
    </div>
    <div class="form-group">
        <label for="phone">phone-number</label>
        <input type="text" class="form-control" placeholder="Enter contact's phone contact">
    </div>
    <button type="submit" class="btn btn-primary">Submit change to contact</button>
    <a class="btn btn-secondary" asp-controller="Contacto" asp-action="Index" role="button">Return</a>
</form>