@model List<ContactModel>
@{
    ViewData["Title"] = "Contact List";
}

<div class="text-center">
    <div class=" d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" asp-controller="Contacto" asp-action="Create"> Add a new contact</a> 
    </div>
    <h1 class="display-4">Contact List</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">name</th>
                <th scope="col">e-mail</th>
                <th scope="col">Contact</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>

            @{
                if (Model != null && Model.Any())
                {
                    foreach (ContactModel contact in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@contact.Name</td>
                            <td>@contact.Email</td>
                            <td>@contact.Phone</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a role="button" class="btn btn-outline-success" asp-route-id="@contact.Id" asp-controller="Contacto" asp-action="Edit">Edit</a>
                                    <a role="button" class="btn btn-outline-danger" asp-route-id="@contact.Id" asp-controller="Contacto" asp-action="ConfirmDelete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            }

        </tbody>
    </table>


</div>
